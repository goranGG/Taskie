<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/imageview_task_priority"
        android:layout_width="@dimen/task_taskPriority_width"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/textview_task_duedate"
        android:src="@color/taskPriority_Unknown"/>

    <ToggleButton
        android:id="@+id/toggleButton_task_completed"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/textview_task_duedate"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageview_task_priority"
        tools:ignore="RtlCompat"
        android:textSize="@dimen/textSize_small"
        android:textOff="@string/toggleButton_task_completed_off"
        android:textOn="@string/toggleButton_task_completed_on"
        android:onClick="toggleComplete"
        />
    <TextView
        android:id="@+id/textview_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/toggleButton_task_completed"
        android:layout_toStartOf="@id/toggleButton_task_completed"
        android:textSize="@dimen/textSize_large"/>

    <TextView
        android:id="@+id/textview_task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/toggleButton_task_completed"
        android:layout_toStartOf="@id/toggleButton_task_completed"
        android:layout_below="@id/textview_task_title"
        android:textSize="@dimen/textSize_normal"/>
    <TextView
        android:id="@+id/textview_task_duedate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/toggleButton_task_completed"
        android:layout_toStartOf="@id/toggleButton_task_completed"
        android:layout_below="@id/textview_task_description"
        android:textSize="@dimen/textSize_normal"/>
</RelativeLayout>